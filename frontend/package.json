{
  "name": "react-app",
  "version": "0.0.0",
  "scripts": {
    "start": "react-scripts start",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write src",
    "format:check": "prettier --check src",
    "lint": "eslint --max-warnings 0 --ext ts --ext tsx src",
    "jest": "react-scripts test --watchAll=false",
    "test": "npm run lint && npm run typecheck && npm run jest"
  },
  "dependencies": {
    "@emotion/react": "^11.10.5",
    "@mantine/core": "^5.10.0",
    "@mantine/hooks": "^5.10.0",
    "@tabler/icons": "^1.119.0",
    "@tanstack/react-query": "^4.20.9",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^5.3.4"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.11.59",
    "@types/react": "^18.0.20",
    "@types/react-dom": "^18.0.6",
    "@types/react-router-dom": "^5.3.3",
    "prettier": "^2.7.1",
    "react-scripts": "5.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.3"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "private": true
}
